    <title>SRMS</title>
    <link rel="stylesheet" href="/style.css">
    <style>
.students_details {
  max-width: 520px;
  margin: 60px auto;
  padding: 28px 32px;
  background: #ffffff;
  border-radius: 14px;
  box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
  font-family: "Segoe UI", Tahoma, sans-serif;
}

/* name + id block */
.id_name {
  margin-bottom: 12px;
}

#name {
  font-size: 1.6rem;
  font-weight: 600;
  margin: 0 0 6px 0;
  color: #222;
}

#id {
  font-size: 0.95rem;
  color: #555;
  padding-bottom: 12px;
  border-bottom: 1px solid #eee;
  margin: 0;
}

/* age & phone BELOW id */
#age,
#phone {
  font-size: 0.95rem;
  color: #333;
  margin: 8px 0;
}

#age {
  margin-top: 14px;
}

/* branch & year cards */
.phone_year {
  display: flex;
  gap: 16px;
  margin-top: 20px;
}

#branch,
#year {
  flex: 1;
  background: #f5f9ff;
  padding: 14px;
  border-radius: 10px;
  text-align: center;
  font-size: 0.9rem;
}

#branch strong,
#year strong {
  display: block;
  margin-bottom: 6px;
  color: #555;
}


    </style>
</head>
